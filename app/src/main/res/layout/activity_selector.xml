<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_white"
              android:orientation="vertical">

    <include layout="@layout/include_title"/>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

        <LinearLayout style="@style/linear_layout_vertical"
                      android:paddingBottom="20dp"
                      android:paddingLeft="10dp"
                      android:paddingTop="10dp">

            <TextView style="@style/text_view"
                      android:layout_marginBottom="7dp"
                      android:layout_marginLeft="15dp"
                      android:layout_marginTop="7dp"
                      android:text="项目状态"
                      android:textColor="@color/font_black"/>

            <GridView android:id="@+id/grid_view_state"
                      android:layout_width="match_parent"
                      android:layout_height="120dp"
                      android:gravity="center"
                      android:layout_marginLeft="5dp"
                      android:layout_marginRight="12dp"
                      android:horizontalSpacing="5dp"
                      android:listSelector="@color/font_white"
                      android:numColumns="3"
                      android:paddingBottom="5dp"
                      android:paddingTop="5dp"
                      android:verticalSpacing="10dp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="7dp"
                      android:layout_marginLeft="15dp"
                      android:layout_marginTop="7dp"
                      android:text="信用等级"
                      android:textColor="@color/font_black"/>

            <GridView android:id="@+id/grid_view_grade1"
                      android:layout_width="match_parent"
                      android:layout_height="180dp"
                      android:layout_marginLeft="5dp"
                      android:layout_marginRight="12dp"
                      android:gravity="center"
                      android:horizontalSpacing="5dp"
                      android:listSelector="@color/font_white"
                      android:numColumns="3"
                      android:paddingBottom="5dp"
                      android:paddingTop="5dp"
                      android:verticalSpacing="10dp"/>

            <!--<GridView android:id="@+id/grid_view_grade2"
                      android:layout_width="match_parent"
                      android:layout_height="60dp"
                      android:layout_marginLeft="5dp"
                      android:layout_marginRight="12dp"
                      android:gravity="center"
                      android:listSelector="@color/font_white"
                      android:numColumns="4"
                      android:paddingBottom="5dp"
                      android:paddingTop="5dp"
                      android:verticalSpacing="10dp"/>-->

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="7dp"
                      android:layout_marginLeft="15dp"
                      android:layout_marginTop="7dp"
                      android:text="项目期限"
                      android:textColor="@color/font_black"/>

            <GridView android:id="@+id/grid_view_term"
                      android:layout_width="match_parent"
                      android:layout_height="120dp"
                      android:layout_marginLeft="5dp"
                      android:layout_marginRight="12dp"
                      android:gravity="center"
                      android:horizontalSpacing="5dp"
                      android:listSelector="@color/font_white"
                      android:numColumns="3"
                      android:paddingBottom="5dp"
                      android:paddingTop="5dp"
                      android:verticalSpacing="10dp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="7dp"
                      android:layout_marginLeft="15dp"
                      android:layout_marginTop="7dp"
                      android:text="还款方式"
                      android:textColor="@color/font_black"/>

            <GridView android:id="@+id/grid_view_style"
                      android:layout_width="match_parent"
                      android:layout_height="120dp"
                      android:layout_marginLeft="5dp"
                      android:layout_marginRight="12dp"
                      android:gravity="center"
                      android:horizontalSpacing="5dp"
                      android:listSelector="@color/font_white"
                      android:numColumns="3"
                      android:paddingBottom="5dp"
                      android:paddingTop="5dp"
                      android:verticalSpacing="10dp"/>

            <Button android:id="@+id/select_submit"
                    style="@style/button_reg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape_btn_invest"
                    android:text="确认"
                    android:textColor="@color/font_white"
                    android:textSize="18sp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>