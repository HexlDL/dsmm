<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_all"
              android:orientation="vertical">

    <TextView android:id="@+id/tv_date_line"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:text="投标日期 2017-03-12"
              android:textColor="@color/font_gray"
              android:textSize="14sp"/>

    <RelativeLayout style="@style/relative_layout"
                    android:background="@color/bg_white"
                    android:gravity="center_vertical"
                    android:id="@+id/relative_layout"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp">

        <TextView android:id="@+id/tv_borrow_name"
                  style="@style/text_view"
                  android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="17dp"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:text="同属宝123123131"
                  android:textSize="14sp"/>

        <!--<TextView android:id="@+id/tv_bidding"
                  style="@style/text_view"
                  android:layout_alignBottom="@+id/tv_title"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="15dp"
                  android:text="3个月"
                  android:textSize="18sp"/>-->

        <TextView android:id="@+id/tv_detail"
                  style="@style/text_view"
                  android:layout_marginRight="15dp"
                  android:background="@drawable/shape_btn_invest"
                  android:gravity="center_vertical"
                  android:paddingBottom="4dp"
                  android:paddingLeft="14dp"
                  android:paddingRight="14dp"
                  android:paddingTop="4dp"
                  android:visibility="visible"
                  android:text="转让"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/font_white"
                  android:textSize="12sp"/>

        <TextView android:id="@+id/tv_total_period"
                  style="@style/text_view"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="5dp"
                  android:layout_toLeftOf="@id/tv_detail"
                  android:text="已还/总期数  3个月"
                  android:textColor="@color/font_black"
                  android:textSize="12sp"/>

    </RelativeLayout>

    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="@color/view_line"/>


    <LinearLayout style="@style/linear_layout_horizontal"
                  android:background="@color/bg_white"
                  android:padding="15dp">

        <LinearLayout style="@style/linear_layout_weight_horizontal"
                      android:gravity="center"
                      android:orientation="vertical">

            <TextView android:id="@+id/tv_capital"
                      style="@style/text_view_my_invest"
                      android:text="1000.00"/>

            <TextView style="@style/text_view_my_invest_desc"
                      android:id="@+id/tv_desc1"
                      android:text="待收本金（元）"/>

        </LinearLayout>

        <LinearLayout style="@style/linear_layout_weight_horizontal"
                      android:gravity="center"
                      android:orientation="vertical">

            <TextView android:id="@+id/tv_interest"
                      style="@style/text_view_my_invest"
                      android:text="3个月"/>

            <TextView style="@style/text_view_my_invest_desc"
                      android:id="@+id/tv_desc2"
                      android:text="待收利息（元）"/>

        </LinearLayout>

        <LinearLayout style="@style/linear_layout_weight_horizontal"
                      android:gravity="center"
                      android:orientation="vertical">

            <TextView android:id="@+id/tv_borrow_interest_rate"
                      style="@style/text_view_my_invest"
                      android:text="7.20%"
                      android:textColor="@color/font_black"/>

            <TextView style="@style/text_view_my_invest_desc"
                      android:id="@+id/tv_desc3"
                      android:text="年化收益"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>