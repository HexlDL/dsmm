<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="@mipmap/red_use"
                android:orientation="vertical"
                android:paddingBottom="3dp"
                android:id="@+id/rl_background">

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:text="32"
        android:textColor="@color/font_violet"
        android:textSize="32sp"/>


    <ImageView
        android:id="@+id/iv_vertical_line"
        android:layout_width="1dp"
        android:layout_height="110dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/tv_type"
        android:scaleType="centerCrop"
        android:src="@mipmap/vertical_line"/>

    <ImageView
        android:id="@+id/iv_seal"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="23dp"
        android:layout_toLeftOf="@+id/tv_type"/>

    <TextView
        android:id="@+id/tv_red_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/font_golden"
        android:textSize="34sp"
        tools:text="50元"/>

    <TextView
        android:id="@+id/tv_red_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_red_amount"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_red_amount"
        android:textColor="@color/font_light_black"
        android:textSize="16sp"
        tools:text="10000元"/>

    <TextView
        android:id="@+id/tv_red_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_red_term_time"
        android:layout_alignLeft="@+id/tv_red_range"
        android:text="有效期："
        android:textColor="@color/font_light_black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_red_term_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_red_amount"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/tv_red_term"
        android:textColor="@color/font_light_black"
        android:textSize="14sp"
        tools:text="2017-06-21至2017-09-18"/>

    <TextView
        android:id="@+id/tv_red_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_red_amount"
        android:layout_below="@id/tv_red_term"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:text="投资范围："
        android:textColor="@color/font_light_black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_red_range_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_red_term"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/tv_red_range"
        android:lineSpacingExtra="2dp"
        android:text=""
        android:layout_toLeftOf="@+id/iv_vertical_line"
        android:textColor="@color/font_light_black"
        android:textSize="14sp"/>


</RelativeLayout>
