<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="vertical"
                android:padding="10dp">

    <TextView android:id="@+id/tv_capital"
              style="@style/text_view"
              android:textColor="@color/font_violet"
              android:textSize="14sp"/>

    <TextView android:id="@+id/tv_desc"
              style="@style/text_view"
              android:layout_below="@id/tv_capital"
              android:layout_marginTop="3dp"
              android:textColor="@color/font_black"
              android:textSize="14sp"/>

    <TextView android:id="@+id/tv_time"
              style="@style/text_view"
              android:layout_alignParentRight="true"
              android:textColor="@color/font_time_gray"
              android:textSize="12sp"/>

    <TextView android:id="@+id/tv_money"
              style="@style/text_view"
              android:layout_alignParentRight="true"
              android:layout_below="@id/tv_time"
              android:layout_marginTop="6dp"
              android:textColor="@color/font_black"
              android:textSize="14sp"/>

</RelativeLayout>